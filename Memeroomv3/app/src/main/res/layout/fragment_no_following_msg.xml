<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggedIn.MenuFragments.NoFollowingMsg"
    android:background="@color/lightorangedark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nofollowingfound"
            android:textSize="25sp"
            android:layout_weight="5"
            android:gravity="bottom|center_horizontal"
            android:textColor="#86B1BA"
            android:textStyle="bold"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/noperson"
            android:contentDescription="@string/no_following_found_image" />





    </LinearLayout>




</FrameLayout>